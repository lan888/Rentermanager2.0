<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/renter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/input_box"
        android:gravity="center"
        android:hint="请填写租户姓名" />
    <EditText
        android:id="@+id/renter_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/input_box"
        android:gravity="center"
        android:hint="请填写租户房间号" />
    <Spinner
        android:id="@+id/renter_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/input_box"
        android:gravity="center"
        android:entries="@array/sp_data1"
        />
    <EditText
        android:id="@+id/renter_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/input_box"
        android:gravity="center"
        android:hint="请填写租户工作单位" />
    <EditText
        android:id="@+id/renter_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/input_box"
        android:gravity="center"
        android:hint="请填写租户手机号" />
    <EditText
        android:id="@+id/renter_idcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/input_box"
        android:gravity="center"
        android:hint="请填写租户身份证" />
    <EditText
        android:id="@+id/renter_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/input_box"
        android:gravity="center"
        android:hint="请填写租户人数" />

</LinearLayout>